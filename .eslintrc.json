{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "settings": {
    "pragma": "React",
    "version": "detect"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    },
    "extraFileExtensions": [".mdx"]
  },
  "plugins": ["@typescript-eslint", "react"],
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended"
  ]
}
